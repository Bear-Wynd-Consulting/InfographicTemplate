                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: { display: true, text: 'Evolving AI Application Focus' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 5,
                        ticks: { stepSize: 1 }
                    }
                }
            }
        });

        const modal = document.getElementById('geminiModal');
        const modalTitle = document.getElementById('geminiModalTitle');
        const modalContent = document.getElementById('geminiModalContent');

        function showModal(title, content) {
            modalTitle.textContent = title;
            modalContent.innerHTML = content;
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        async function callGemini(prompt) {
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
            
            const payload = {
                contents: [{
                    role: "user",
                    parts: [{ text: prompt }]
                }]
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API call failed with status: ${response.status}`);
                }

                const result = await response.json();
                
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    return result.candidates[0].content.parts[0].text;
                } else {
                    return "Sorry, I couldn't generate a response. The model's output was empty.";
                }
            } catch (error) {
                console.error("Gemini API call error:", error);
                return "An error occurred while trying to get ideas. Please check the console for details.";
            }
        }

        async function generateCampaignIdeas(phase) {
            let prompt = '';
            let title = '';
            switch(phase) {
                case 1:
                    title = 'Phase 1 Campaign Ideas';
                    prompt = "Acting as an expert B2B startup marketing consultant, generate 3 creative and high-impact marketing campaign ideas for a startup in its 'Foundation & Traction' phase (first 6 months). The goal is to achieve initial market traction and gather data. Focus on lean, agile tactics. Present the ideas as a numbered list with a title and a short description for each.";
                    break;
                case 2:
                    title = 'Phase 2 Campaign Ideas';
                    prompt = "Acting as an expert B2B startup marketing consultant, generate 3 creative and high-impact marketing campaign ideas for a startup in its 'Acceleration & Optimization' phase (months 7-12). The goal is to scale proven channels and build a repeatable content engine. Focus on tactics that deepen engagement and generate higher quality leads. Present the ideas as a numbered list with a title and a short description for each.";
                    break;
                case 3:
                    title = 'Phase 3 Campaign Ideas';
                    prompt = "Acting as an expert B2B startup marketing consultant, generate 3 creative and high-impact marketing campaign ideas for a startup in its 'Scaling & Intelligence' phase (months 13-18). The goal is to establish market leadership and leverage data for advanced strategies. Focus on tactics that build brand authority and utilize data for sophisticated targeting. Present the ideas as a numbered list with a title and a short description for each.";
                    break;
            }
            
            showModal(title, '<p class="text-center animate-pulse">Generating ideas...</p>');
            const response = await callGemini(prompt);
            modalContent.innerHTML = response.replace(/\n/g, '<br>');
        }

        async function elaborateAIStrategy() {
            const title = 'AI Strategy Elaboration';
            const prompt = `As a marketing futurist, elaborate on the AI strategy for a startup, as depicted by the following data points from a radar chart.
            - Phase 1 Focus: Content Velocity (4/5), Research & Analysis (3/5), Sales Enablement (1/5), Personalization (1/5), Strategic Insights (0/5).
            - Phase 2 Focus: Content Velocity (5/5), Research & Analysis (4/5), Sales Enablement (4/5), Personalization (3/5), Strategic Insights (2/5).
            - Phase 3 Focus: Content Velocity (5/5), Research & Analysis (5/5), Sales Enablement (5/5), Personalization (5/5), Strategic Insights (5/5).
            Provide a detailed paragraph for each phase, using H3 markdown for each phase title, explaining what these focus levels mean in practical terms for the marketing team.`;

            showModal(title, '<p class="text-center animate-pulse">Generating strategic insights...</p>');
            const response = await callGemini(prompt);
            let formattedResponse = response.replace(/\n/g, '<br>');
            formattedResponse = formattedResponse.replace(/### (.*?)\b/g, '<h3>$1</h3>');
            modalContent.innerHTML = formattedResponse;
        }

    </script>
