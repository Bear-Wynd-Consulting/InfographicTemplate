                    y: { stacked: true, beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
        
        new Chart(document.getElementById('aiFocusChart'), {
            type: 'radar',
            data: {
                labels: [
                    wrapLabels('Content Velocity'), 
                    wrapLabels('Research & Analysis'), 
                    wrapLabels('Sales Enablement'), 
                    wrapLabels('Personalization'), 
                    wrapLabels('Strategic Insights')
                ],
                datasets: [
                    {
