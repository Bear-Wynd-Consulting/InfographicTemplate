    <script>
        const wrapLabels = (label) => {
            if (label.length > 16) {
                const words = label.split(' ');
                let line = '';
                let result = [];
                for (let i = 0; i < words.length; i++) {
                    if ((line + words[i]).length > 16) {
                        result.push(line.trim());
                        line = '';
                    }
                    line += words[i] + ' ';
                }
                result.push(line.trim());
                return result;
            }
            return label;
        };
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
              return label.join(' ');
            } else {
              return label;
            }
        };

        const chartColors = {
            blue1: '#003B73',
            blue2: '#0074D9',
            blue3: '#4192D9',
            grey: '#B0C4DE',
        };

        new Chart(document.getElementById('phase1Chart'), {
            type: 'bar',
            data: {
                labels: ['Website Traffic (Goal)', 'Lead Volume (Goal)'],
                datasets: [{
                    label: 'Initial Goals',
                    data: [10000, 100],
                    backgroundColor: [chartColors.blue3, chartColors.blue2],
                    borderColor: [chartColors.blue2, chartColors.blue1],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    title: { display: true, text: 'Phase 1 KPIs' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                },
                scales: { y: { beginAtZero: true } }
            }
        });

        new Chart(document.getElementById('phase2Chart'), {
            type: 'doughnut',
            data: {
                labels: ['Marketing Qualified Leads (MQLs)', 'Sales Qualified Leads (SQLs)'],
                datasets: [{
                    label: 'Lead Qualification',
                    data: [75, 25],
                    backgroundColor: [chartColors.blue3, chartColors.blue1],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    title: { display: true, text: 'Phase 2 Lead Funnel' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                }
            }
        });
        
        new Chart(document.getElementById('phase3Chart'), {
            type: 'line',
            data: {
                labels: ['M13', 'M14', 'M15', 'M16', 'M17', 'M18'],
                datasets: [
                    {
                        label: 'Marketing-Sourced Revenue ($K)',
                        data: [50, 65, 80, 100, 125, 150],
                        borderColor: chartColors.blue1,
                        backgroundColor: 'rgba(0, 59, 115, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Customer Lifetime Value (LTV)',
                        data: [5, 5.5, 6, 6.8, 7.5, 8.5],
                        borderColor: chartColors.blue3,
                        backgroundColor: 'rgba(65, 146, 217, 0.1)',
                        fill: false,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    title: { display: true, text: 'Phase 3 Growth Projections' },
                    tooltip: { callbacks: { title: tooltipTitleCallback } }
                },
                scales: { y: { beginAtZero: true } }
            }
        });
        
        new Chart(document.getElementById('teamGrowthChart'), {
            type: 'bar',
            data: {
                labels: ['Phase 1', 'Phase 2', 'Phase 3'],
